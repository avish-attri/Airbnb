<%- include('../partials/head') %>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  </head>
  <body class="bg-gray-100">
    <%- include('../partials/nav') %>
    <main class="container mx-auto mt-8 p-8 bg-white rounded-lg shadow-md max-w-2xl">
      <h1 class="text-3xl font-bold mb-6 text-center text-gray-800 border-b pb-4">Create Your Account</h1>
      
      <form action="/signup" method="POST" class="max-w-md mx-auto">
        <%- include('../partials/errors') %>
        <div class="flex gap-4 mb-6">
          <div class="flex-1">
            <div class="relative">
              <span class="absolute inset-y-0 left-0 flex items-center pl-3 text-gray-400">
                <i class="fas fa-user"></i>
              </span>
              <input
                type="text"
                id="firstName"
                name="firstName"
                placeholder="First Name"
                value="<%= oldInput.firstName ? oldInput.firstName : '' %>"
                class="w-full pl-10 px-4 py-3 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-red-500 transition"
                required />
            </div>
          </div>
          <div class="flex-1">
            <div class="relative">
              <span class="absolute inset-y-0 left-0 flex items-center pl-3 text-gray-400">
                <i class="fas fa-user"></i>
              </span>
              <input
                type="text"
                id="lastName"
                name="lastName"
                value="<%= oldInput.lastName ? oldInput.lastName : '' %>"
                placeholder="Last Name"
                class="w-full pl-10 px-4 py-3 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-red-500 transition" />
            </div>
          </div>
        </div>
        <div class="mb-6">
          <div class="relative">
            <span class="absolute inset-y-0 left-0 flex items-center pl-3 text-gray-400">
              <i class="fas fa-envelope"></i>
            </span>
            <input
              type="email"
              id="email"
              name="email"
              value="<%= oldInput.email ? oldInput.email : '' %>"
              placeholder="Email Address"
              class="w-full pl-10 px-4 py-3 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-red-500 transition"
              required />
          </div>
        </div>
        <div class="mb-6">
          <div class="relative">
            <span class="absolute inset-y-0 left-0 flex items-center pl-3 text-gray-400">
              <i class="fas fa-lock"></i>
            </span>
            <input
              type="password"
              id="password"
              name="password"
              placeholder="Password"
              class="w-full pl-10 px-4 py-3 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-red-500 transition"
              required/>
          </div>
        </div>
        <div class="mb-6">
          <div class="relative">
            <span class="absolute inset-y-0 left-0 flex items-center pl-3 text-gray-400">
              <i class="fas fa-lock"></i>
            </span>
            <input
              type="password"
              id="confirmPassword"
              name="confirmPassword"
              placeholder="Confirm Password"
              class="w-full pl-10 px-4 py-3 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-red-500 transition"
              required/>
          </div>
        </div>
        <div class="mb-6 flex items-center justify-between">
          <div>
            <label class="inline-flex items-center cursor-pointer mr-4">
              <input type="radio" name="userType" value="guest" id="guest" class="form-radio text-red-500 focus:ring-red-500" checked="<% oldInput.userType === 'guest'%>" />
              <span class="ml-2">Guest</span>
            </label>
            <label class="inline-flex items-center cursor-pointer">
              <input type="radio" name="userType" value="host" id="host" class="form-radio text-red-500 focus:ring-red-500" checked="<% oldInput.userType === 'host'%>"/>
              <span class="ml-2">Host</span>
            </label>
          </div>
          <label class="inline-flex items-center cursor-pointer">
            <input type="checkbox" name="terms" id="terms" class="form-checkbox text-red-500 focus:ring-red-500" required />
            <span class="ml-2 text-gray-700 text-xs">I agree to terms and conditions</span>
          </label>
        </div>
        <button type="submit" class="w-full bg-red-500 text-white py-3 rounded-md hover:bg-red-600 focus:ring-4 focus:ring-red-300 font-medium transition duration-300 flex items-center justify-center mt-2">
          <span>Register</span>
          <i class="fas fa-arrow-right ml-2"></i>
        </button>
        <p class="text-center mt-4 text-gray-600">
          Already have an account? <a href="/login" class="text-red-500 hover:underline">Log in</a>
        </p>
      </form>
    </main>
  </body>
</html>
